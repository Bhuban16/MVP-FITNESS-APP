<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Upload">

    <VideoView
        android:id="@+id/videoview_main"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_margin="10dp"
        android:backgroundTint="@android:color/black"
         />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:id="@+id/et_video_name"/>

    <EditText
        android:id="@+id/et_video_description"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:hint="Description"
        android:textColor="@color/black"
        android:textSize="10dp">

    </EditText>


    <TextView

        android:layout_width="167dp"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="ChooseVideo"
        android:text="Choose Workout Video" />

    <TextView

        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="ShowVideo"
        android:text="Show workout " />

    <Button
        android:id="@+id/button_upload_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Workout plan"
        android:layout_gravity="center"
        android:layout_margin="20dp"/>

    <ProgressBar
        android:id="@+id/progressBar_main"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="263dp"
        android:layout_height="12dp"
        android:indeterminate="true"
        android:indeterminateTint="@android:color/holo_orange_dark"
        android:visibility="invisible" />


</LinearLayout>