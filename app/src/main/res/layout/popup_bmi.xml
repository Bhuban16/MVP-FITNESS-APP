<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a1_grad"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:src="@drawable/ic_close" />

    <ImageView
        android:id="@+id/iv_imoji"
        android:layout_width="157dp"
        android:layout_height="123dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="122dp"

        android:src="@drawable/imoji_default" />

    <TextView
        android:id="@+id/tv_ans_bmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_imoji"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="124dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_current_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ans_bmi"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_recomended"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_current_state"
        android:layout_alignLeft="@+id/tv_current_state"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_bmichart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_recomended"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="91dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_corner_button"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/View_Chart"
        android:textColor="@color/white" />


</RelativeLayout>
